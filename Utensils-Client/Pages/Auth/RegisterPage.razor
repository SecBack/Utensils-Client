@page "/register"
@using global::Shared.DtoModels;
@inherits RegisterPageLogic
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<RadzenCard>
    <RadzenTemplateForm Data="RegisterModel" TItem="RegisterModel" Submit=@OnRegister>
        <RadzenStack>
            <RadzenFormField Text="First Name">
                <ChildContent>
                    <RadzenTextBox Name="Username" @bind-Value=@RegisterModel.Name />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Username" Text="Name is required" />
                </Helper>
            </RadzenFormField>
            <RadzenFormField Text="First Email">
                <ChildContent>
                    <RadzenPassword Name="Email" @bind-Value=@RegisterModel.Email />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Email" Text="Email is required" />
                </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Password">
                <ChildContent>
                    <RadzenPassword Name="Password" @bind-Value=@RegisterModel.Password />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Password" Text="Password is required" />
                </Helper>
            </RadzenFormField>
        </RadzenStack>

        <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Text="Register" />
    </RadzenTemplateForm>
</RadzenCard>
