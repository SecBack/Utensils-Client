@page "/register"
@using global::Shared.Dto.Auth;
@inherits RegisterPageLogic
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<RadzenCard>
    <RadzenTemplateForm Data="RegisterDto" TItem="RegisterDto" Submit=@OnRegister>
        <RadzenStack>
            <RadzenFormField Text="First Name">
                <ChildContent>
                    <RadzenTextBox Name="Username" @bind-Value=@RegisterDto.Name />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Username" Text="Name is required" />
                </Helper>
            </RadzenFormField>

            <RadzenFormField Text="Email">
                <ChildContent>
                    <RadzenTextBox Name="Email" @bind-Value=@RegisterDto.Email />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Email" Text="Email is required" />
                </Helper>
            </RadzenFormField>

            <RadzenFormField Text="Password">
                <ChildContent>
                    <RadzenPassword Name="Password" @bind-Value=@RegisterDto.Password />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="Password" Text="Password is required" />
                </Helper>
            </RadzenFormField>
        </RadzenStack>

        <RadzenButton Style="margin-top: 10px" ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Text="Register" />
    </RadzenTemplateForm>
</RadzenCard>
